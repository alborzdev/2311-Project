<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="504.0" prefWidth="690.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <MenuBar style="-fx-background-color: light-grey;">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem onAction="#doExit" text="Exit">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem onAction="#doOpen" text="Open">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="Action 1" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <VBox layoutX="30.0" layoutY="72.0" prefHeight="55.0" prefWidth="151.0">
         <children>
            <TextField fx:id="name" promptText="Name">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <VBox layoutX="30.0" layoutY="127.0" prefHeight="55.0" prefWidth="151.0">
         <children>
            <TextField fx:id="title" promptText="Title">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <VBox layoutX="30.0" layoutY="182.0" prefHeight="55.0" prefWidth="151.0">
         <children>
            <TextField fx:id="composer" promptText="Composer">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <VBox layoutX="30.0" layoutY="237.0" prefHeight="55.0" prefWidth="151.0">
         <children>
            <TextField fx:id="lyricist" promptText="Lyricist">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <BorderPane layoutX="353.0" layoutY="58.0" prefHeight="327.0" prefWidth="296.0">
         <top>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="93.0" text="Preview" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Label>
         </top>
         <center>
            <TextArea fx:id="previewXML" editable="false" prefHeight="250.0" prefWidth="296.0" promptText="Preview xml file" wrapText="true" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <HBox alignment="BOTTOM_CENTER" prefHeight="21.0" prefWidth="296.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#backButton" text="Back">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#preview" text="Preview" />
                  <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#convertFile" prefHeight="25.0" prefWidth="119.0" text="Convert to .xml">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="4.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
      <ButtonBar layoutX="30.0" layoutY="378.0" prefHeight="40.0" prefWidth="200.0" />
   </children>
</AnchorPane>
